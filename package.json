  "author": "Defra",
  "contributors": [
    "John Watson john.watson1@defra.gov.uk"
  ],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@hapi/catbox-redis": "6.0.2",
    "@hapi/hapi": "21.3.2",
    "applicationinsights": "2.3.5",
    "hapi-auth-bearer-token": "8.0.0",
    "hapi-pino": "12.1.0",
    "jsonwebtoken": "9.0.1",
    "log-timestamp": "0.3.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@hapi/catbox-memory": "6.0.1",
    "blipp": "4.0.2",
    "jest": "29.2.2",
    "jest-junit": "14.0.1",
    "nodemon": "3.0.1",
    "standard": "17.0.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
